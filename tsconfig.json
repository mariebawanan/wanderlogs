{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "~*": ["src/*"]
        }
    }
}
